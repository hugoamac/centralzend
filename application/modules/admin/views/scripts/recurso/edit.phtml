                            <a href="javascript:void(0);" class="add"><img src="/images/admin/icon_add.png" title="adicionar" class="icon"/></a> 
                            <? if ($indice > 0): ?>
                                <a href='javascript:void(0);' class='del'><img src="/images/admin/icon_del.png" title="excluir" class="icon"/></a>
                            <? endif; ?>
                        </p>
                    <? endforeach; ?>
                <? endif; ?>
            </div>
        </dd>
        <dt></dt>
        <dd><button type="submit">Salvar</button></dd>
    </dl>
