<form action="" method="post" class="Form" id="form">
    <h2>Editar</h2>
    <dl>
        <dt>Area:</dt>

        <dd>
            <input type="text" name="area" value="<?= $this->recurso["area"] ?>"/>
        </dd>

        <dt>Recurso:</dt>

        <dd>
            <input type="text" name="recurso" value="<?= $this->recurso["nome"] ?>"/>
